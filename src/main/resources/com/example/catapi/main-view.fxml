<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="600" prefWidth="400" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.catapi.MainController">
    <padding>
        <Insets bottom="30.0" left="50.0" right="50.0" top="50.0" />
    </padding>
   <children>
      <Label fx:id="heading" text="Random Cat Images">
      </Label>
      <Label fx:id="selectLabel" text="Select breed:" textAlignment="CENTER">
      </Label>
      <ComboBox fx:id="breedList" onAction="#getSelectedBreedId" prefWidth="150.0" />
      <Button fx:id="searchBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#search" text="SEARCH" textAlignment="CENTER">
      </Button>
      <ImageView fx:id="resultImg" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="nextBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#viewDetails" text="LEARN MORE" textAlignment="CENTER" visible="false">
      </Button>
   </children>
</VBox>
